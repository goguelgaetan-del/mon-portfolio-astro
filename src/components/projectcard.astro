---
import Badge from "./Badge.astro";

const { title, description, date, tags = [], image } = Astro.props;
---

<div class="project-card">
  {image && <img src={image} alt={title} />}

  <div class="content">
    <h3>{title}</h3>
    <p class="p-date">{date}</p>

    <p class="p-desc">{description}</p>

    {tags.length > 0 && (
      <div class="p-tags">
        {tags.map((tag) => (
          <Badge label={tag} variant="soft" />
        ))}
      </div>
    )}
  </div>
</div>

<style>
  .project-card {
    background: var(--bg-elevated);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid rgba(148, 163, 184, 0.25);
    box-shadow: var(--shadow-soft);
    transition:
      transform 0.15s ease,
      border-color 0.15s ease,
      box-shadow 0.15s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent);
    box-shadow: 0 20px 50px rgba(15, 23, 42, 0.75);
  }

  img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    display: block;
  }

  .content {
    padding: 18px 20px;
  }

  h3 {
    font-size: 1.25rem;
    margin: 0 0 4px;
  }

  .p-date {
    margin: 0 0 12px;
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .p-desc {
    margin: 0 0 16px;
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.45;
  }

  .p-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
</style>
