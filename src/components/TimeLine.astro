---
const { items } = Astro.props;
---

<div class="timeline">
  {items.map((exp) => (
    <div class="timeline-item">
      <div class="timeline-marker"></div>

      <div class="timeline-content">
        <h3>{exp.title}</h3>
        <p class="period">{exp.period}</p>

        <ul>
          {exp.details.map((d) => (
            <li>{d}</li>
          ))}
        </ul>
      </div>
    </div>
  ))}
</div>

<style>
  .timeline {
    position: relative;
    border-left: 2px solid rgba(148, 163, 184, 0.25);
    padding-left: 32px;
    margin: 40px 0;
  }

  .timeline-item {
    position: relative;
    padding-top: 4px;
    margin-bottom: 32px;
  }

  .timeline-marker {
    position: absolute;
    left: -11px;
    top: 0.35rem; /* ajuste la verticale du point */
    width: 18px;
    height: 18px;
    background: var(--accent);
    border-radius: 50%;
    box-shadow: 0 0 12px var(--accent);
  }

  .timeline-content h3 {
    margin: 0;
    font-size: 1.3rem;
  }

  .period {
    margin: 2px 0 12px;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  ul {
    margin: 0;
    padding-left: 20px;
    color: var(--text-muted);
    line-height: 1.6;
  }
</style>
